<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/scripts') %>
        <title>Document</title>
</head>

<body>

    <section>
        <div class="container" style="line-height: 70px;">
            <div class="text-dark">
                <p>My Profile</p>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div>
                <form method="post" action="/user/:userId/profiles/add">

                    <div class="row pt-3">
                        <!-- Form Input Title -->
                        <div class="form-group col-5">
                            <label for="inputTitle">First Name</label>
                            <input type="text" class="form-control" name="firstName">
                        </div>
                        <!-- Form Input Title -->

                        <!-- Form Input Title -->
                        <div class="form-group col-5">
                            <label for="inputTitle">Last Name</label>
                            <input type="text" class="form-control" name="lastName">
                        </div>
                        <!-- Form Input Title -->
                    </div>

                    <!-- Form Difficulty-->
                    <div class=" form-group">
                        <label>Gender</label>
                        <select name="gender" class="form-select">
                            <% const listGender=["Female", "Male" ] %>
                                <% listGender.forEach(el=>{ %>
                                    <option value="<%= el %>">
                                        <%= el %>
                                    </option>
                                    <% }) %>
                        </select>
                    </div>
                    <!-- Form Difficulty--

                   <-- Form Image URL-->
                    <div class="form-group pt-3">
                        <label for="inputImgUrl">Address</label>
                        <input type="text" class="form-control" name="address">
                    </div>
                    <!-- Form Image URL-->

                    <!-- Form Image URL-->
                    <div class="form-group pt-3">
                        <label>Phone Number</label>
                        <input type="text" class="form-control" name="phoneNumber">
                    </div>
                    <!-- Form Image URL-->

                    <!-- Form Date -->
                    <div class="row pt-3">
                        <div class="form-group col-4">
                            <label for="date">Born Date</label>
                            <input type="date" class="form-control" name="bornDate" required>
                        </div>
                    </div>
                    <!-- Form Date -->

                    <!-- Button Submit -->
                    <div class="pt-3">
                        <input type="submit" class="btn btn-dark" value="Submit">
                    </div>
                    <!-- Button Submit -->

                </form>
            </div>
        </div>
    </section>
</body>

</html>